{
  "manifestVersion": 1,
  "id": "azure-devops-google-cloud-tools",
  "publisher": "nexso",
  "version": "1.0.13",
  "name": "Google Cloud tools for Azure DevOps Pipelines",
  "scopes": ["vso.build", "vso.build_execute", "vso.release"],
  "description": "Google Cloud tasks for Azure DevOps Pipelines, like install CLI and deploy do App Services",
  "public": false,
  "categories": ["Azure Pipelines"],
  "icons": {
    "default": "images/gcp.png"
  },
  "tags": [
    "gcloud",
    "cli",
    "google cloud",
    "google cloud platform",
    "gcp",
    "app services"
  ],
  "targets": [{
    "id": "Microsoft.VisualStudio.Services"
  }],
  "contributions": [{
      "id": "gcp-credentials",
      "description": "Credentials for tasks invoking Google Cloud Platform services",
      "type": "ms.vss-endpoint.service-endpoint-type",
      "targets": ["ms.vss-endpoint.endpoint-types"],
      "properties": {
        "name": "GCPToolsServiceEndpoint",
        "displayName": "Google Cloud Platform",
        "authorizationUrl": "",
        "url": {
          "displayName": "Server Url",
          "helpText": "Google Accounts",
          "value": "https://accounts.google.com/o/oauth2",
          "isVisible": "false"
        },
        "dataSources": [{
          "name": "GCPListFunctionRegions",
          "endpointUrl": "https://cloudfunctions.googleapis.com/v1/projects/$(gcpProject)/locations",
          "resultSelector": "jsonpath:$.locations[*].locationId"
        }],
        "authenticationSchemes": [{
            "id": "endpoint-json",
            "type": "ms.vss-endpoint.endpoint-auth-scheme-cert",
            "displayName": "JSON Key file contents",
            "inputDescriptors": [{
              "id": "certificate",
              "name": "Json Text",
              "description": "The contents of the json key file",
              "inputMode": "TextArea",
              "isConfidential": true,
              "validation": {
                "isRequired": true,
                "dataType": "string"
              }
            }]
          },
          {
            "type": "ms.vss-endpoint.endpoint-auth-scheme-oauth2",
            "displayName": "User Account (OAuth2)",
            "authorizationUrl": "{{{configuration.Url}}}/login/oauth/authorize?client_id={{{configuration.ClientId}}}&scope=repo,user,admin:repo_hook",
            "dataSourceBindings": [{
              "target": "AccessToken",
              "endpointUrl": "{{{configuration.Url}}}/login/oauth/access_token",
              "requestVerb": "Post",
              "requestContent": "{\"client_id\":\"{{{configuration.ClientId}}}\",\"client_secret\":\"{{{configuration.ClientSecret}}}\",\"code\":\"{{{configuration.AuthorizationCode}}}\"}",
              "resultSelector": "jsonpath:$",
              "resultTemplate": "{\"AccessToken\" : \"{{{access_token}}}\", \"Error\" : \"{{{error}}}\", \"ErrorDescription\" : \"{{{error_description}}}\"}"
            }],
            "inputDescriptors": []
          },
          {
            "id": "endpoint-auth-scheme-oauth2",
            "description": "User Account (OAuth)",
            "type": "ms.vss-endpoint.service-endpoint-auth-scheme",
            "targets": ["ms.vss-endpoint.endpoint-auth-schemes"],
            "properties": {
              "name": "GCPOAuth2",
              "displayName": "GCP OAuth2",
              "authorizationUrl": "",
              "dataSourceBindings": [{
                "target": "AccessToken",
                "endpointUrl": "",
                "requestVerb": "",
                "requestContent": "",
                "resultSelector": "",
                "resultTemplate": ""
              }],
              "inputDescriptors": [{
                "id": "apitoken",
                "name": "API Key",
                "description": "",
                "inputMode": "textbox",
                "isConfidential": true,
                "validation": {
                  "isRequired": true,
                  "dataType": "string"
                }
              }]
            }
          }
        ],
        "helpMarkDown": "[Get Json Key File](https://console.cloud.google.com/iam-admin/serviceaccounts)"
      }
    },
    {
      "id": "GoogleCloudSdkTool",
      "description": "Run an gcloud CLI command against an GCP connection",
      "type": "ms.vss-distributed-task.task",
      "targets": ["ms.vss-distributed-task.tasks"],
      "properties": {
        "name": "Tasks/GoogleCloudSdkTool"
      }
    },
    {
      "id": "GoogleCloudFunctions",
      "description": "Deploy code to GCP Functions or create, remove and call functions",
      "type": "ms.vss-distributed-task.task",
      "targets": ["ms.vss-distributed-task.tasks"],
      "properties": {
        "name": "Tasks/GoogleCloudFunctions"
      }
    }
  ],
  "links": {
    "getstarted": {
      "uri": "https://github.com/nexsolab/azure-devops-google-cloud-tools#readme"
    },
    "license": {
      "uri": "https://github.com/nexsolab/azure-devops-google-cloud-tools/blob/master/LICENSE"
    },
    "support": {
      "uri": "https://github.com/nexsolab/azure-devops-google-cloud-tools/issues"
    }
  },
  "repository": {
    "type": "git",
    "uri": "https://github.com/nexsolab/azure-devops-google-cloud-tools"
  },
  "branding": {
    "color": "rgb(220, 235, 252)",
    "theme": "light"
  },
  "galleryFlags": [],
  "screenshots": [],
  "content": {
    "details": {
      "path": "README.md"
    },
    "license": {
      "path": "LICENSE"
    }
  },
  "files": [{
      "path": "images",
      "addressable": true
    },
    {
      "path": "Tasks/GoogleCloudSdkTool"
    },
    {
      "path": "Tasks/GoogleCloudFunctions"
    }
  ]
}