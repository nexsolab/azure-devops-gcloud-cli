  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha ESM",
      "skipFiles": [
        "<node_internals>/**",
        "**/esm/*"
      ],
      "cwd": "${workspaceFolder}/Tasks/GoogleCloudFunctions",
      "runtimeExecutable": "mocha",
      "args": ["-r", "esm", "--timeout", "999999", "./src/main.test.js"],
      "outputCapture": "std"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha dist",
      "skipFiles": [
        "<node_internals>/**",
      ],
      "cwd": "${workspaceFolder}/Tasks/GoogleCloudFunctions/dist",
      "runtimeExecutable": "mocha",
      "args": ["--timeout", "999999", "./main.test.js"],
      "outputCapture": "std"
    }
  ]
}